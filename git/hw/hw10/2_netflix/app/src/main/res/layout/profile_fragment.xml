<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="isReg"
            type="Boolean" />
        <variable
            name="name"
            type="String" />
        <variable
            name="image"
            type="String" />
        <variable
            name="email"
            type="String" />
        <variable
            name="phoneNumber"
            type="String" />
        <variable
            name="userName"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView

            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility= "@{isReg ? View.GONE : View.VISIBLE}"
            app:srcCompat="@drawable/profile_icon" />

        <EditText
            android:id="@+id/profile_name_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="enter your name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_image"
            android:visibility= "@{isReg ? View.GONE : View.VISIBLE}"/>

        <EditText

            android:id="@+id/profile_email_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="enter your email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_name_ed"
            android:visibility= "@{isReg ? View.GONE : View.VISIBLE}"/>

        <EditText

            android:id="@+id/profile_phone_number_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="enter your phone number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_email_ed"
            android:visibility= "@{isReg ? View.GONE : View.VISIBLE}"/>

        <EditText

            android:id="@+id/profile_user_name_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="enter your username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_phone_number_ed"
            android:visibility= "@{isReg ? View.GONE : View.VISIBLE}"/>

        <Button
            android:id="@+id/profile_register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="5dp"
            android:text="register"
            android:clickable="@{isReg ? false : true}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_user_name_ed"
            android:visibility= "@{isReg ? View.GONE : View.VISIBLE}"/>

        <ImageView
            android:id="@+id/profile_picture_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:clickable="@{isReg ? false : true}"
            android:focusable="true"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/profile_image"
            app:layout_constraintEnd_toEndOf="@+id/profile_image"
            android:visibility= "@{isReg ? View.GONE : View.VISIBLE}"
            app:srcCompat="@drawable/ic_baseline_add_circle_24" />

        <ImageView
            android:id="@+id/image_profile_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            loadImage="@{image}"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility= "@{isReg ? View.VISIBLE : View.INVISIBLE}"/>

        <TextView
            android:id="@+id/profile_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:visibility= "@{isReg ? View.VISIBLE : View.INVISIBLE}"
            android:text='@{"name: " + name}'
            app:layout_constraintTop_toBottomOf="@+id/image_profile_server" />

        <TextView
            android:id="@+id/profile_email_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:visibility= "@{isReg ? View.VISIBLE : View.INVISIBLE}"
            android:text='@{"email: " + email}'
            app:layout_constraintTop_toBottomOf="@+id/profile_name_tv" />

        <TextView
            android:id="@+id/profile_phone_number_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:visibility= "@{isReg ? View.VISIBLE : View.INVISIBLE}"
            android:text='@{"phone number: " + phoneNumber}'
            app:layout_constraintTop_toBottomOf="@+id/profile_email_tv" />

        <TextView
            android:id="@+id/profile_user_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:visibility= "@{isReg ? View.VISIBLE : View.INVISIBLE}"
            android:text='@{"user name: " + userName}'
            app:layout_constraintTop_toBottomOf="@+id/profile_phone_number_tv" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>