<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/game_nav"
    app:startDestination="@id/gameFragment">

    <fragment
        android:id="@+id/gameFragment"
        android:name="com.example.quiz.GameFragment"
        android:label="GameFragment" >
        <action
            android:id="@+id/action_gameFragment_to_cheatingFragment"
            app:destination="@id/cheatingFragment" />
    </fragment>
    <fragment
        android:id="@+id/cheatingFragment"
        android:name="com.example.quiz.CheatingFragment"
        android:label="CheatingFragment" >
        <action
            android:id="@+id/action_cheatingFragment_to_gameFragment"
            app:destination="@id/gameFragment"
            app:popUpTo="@id/cheatingFragment"
            app:popUpToInclusive="true" />
        <argument android:name="text"
            app:argType="string"
            android:defaultValue="milad" />
    </fragment>
</navigation>